@model EditRoleViewModel

@{
    ViewBag.Title = "Edit role";
}@{
    Layout = "_LayoutAdmin";
}

<h1 class="font-weight-bold"><img src="~/Images/Icons/Role.png" height="60" width="60" /> Edit role</h1>
<form class="mt-3" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary  btn-dark">Update</button>
            <a asp-action="RoleList" asp-controller="Administration" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
    <h2><img src="~/Images/Icons/User.png" height="40" width="40" /> Users</h2>
    <table class="table table-sm table-bordered">

        <thead class="thead-dark">
            <tr><th>User name</th></tr>
        </thead>
        @if (Model.Users.Any())
        {
            @foreach (var x in Model.Users)

            {
                <tr>
                    <td>@x</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No users in this role</td>
            </tr>
        }
    </table>
    <a asp-action="Users" asp-route-id="@Model.Id" asp-controller="Role" class="btn btn-primary btn-dark">Manage users</a>
    @*<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Remove users</a>*@
    <h2><img src="~/Images/Icons/Right.jpg" height="40" width="40" /> Rights</h2>
    <table class="table table-sm table-bordered">

        <thead class="thead-dark">
            <tr><th>Claim type</th><th>Claim value</th></tr>
        </thead>
        @if (Model.Claims.Any())
        {
            @foreach (var x in Model.Claims)

            {
                <tr>
                    <td>@x.Type</td>
                    <td>@x.Value</td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td>No rights in this role</td>
            </tr>
        }
    </table>
    <a asp-action="Rights" asp-route-id="@Model.Id" asp-controller="Role" class="btn btn-primary btn-dark">Manage rights</a>
    @*<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Remove users</a>*@
</form>