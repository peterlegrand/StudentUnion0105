@{
}@{
    ViewBag.Title = "Classification levels";
}
<h1 class="font-weight-bold"><img src="~/Images/Icons/levels.png" title="Levels" height="60" width="60" /> Classifications levels</h1>
<table  class="table table-bordered table-sm table-hover">

    <thead class="thead-dark">
        <tr><th>ID</th><th>Name</th><th></th><th></th><th></th><th></th></tr>
    </thead>
    @foreach (var x in Model)

    {
<tr>
    <td style="width: 44px">@x.Id</td>
    <td>@x.Name</td>
    <td style="width: 22px"><a asp-controller="ClassificationViewModel" asp-action="LevelEdit" asp-route-Id="@x.Id.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
    <td style="width: 22px"><a asp-controller="ClassificationPages" asp-action="Index" asp-route-id="@x.Id"><img src="~/Images/Icons/pages.jpg" title="Pages" height="20" width="20" /></a></td>
    <td style="width: 22px"><a asp-controller="ClassificationViewModel" asp-action="LevelLanguageIndex" asp-route-id="@x.Id.ToString()"><img src="~/Images/Icons/languages.jpg" title="Languages" height="20" width="20" /></a></td>
    <td style="width: 22px"><a asp-controller="ClassificationViewModel" asp-action="LevelDelete" asp-route-id="@x.Id.ToString()"><img src="~/Images/Icons/delete.png" title="Delete" height="20" width="20" /></a></td>
</tr>
    }
</table>
<a asp-controller="ClassificationViewModel" asp-action="LevelCreate" asp-route-id="@ViewBag.ObjectId"><img src="~/Images/Icons/levels.png" title="Levels" height="20" width="20" /> Create new classification level</a><br/>
<a asp-controller="ClassificationViewModel" asp-action="Index"><img src="~/Images/Icons/Classifications.png" title="Classifications" height="20" width="20" /> Back to classification</a>

