@{
}
@{
    ViewBag.Title = "Delete language";
}
<h1><img src="~/Images/Icons/languages.jpg" title="Languages" height="60" width="60" /> Edit language</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.Language" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Language" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ClassificationId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.ClassificationId" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ClassificationName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.ClassificationName" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ClassificationMouseOver" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.ClassificationMouseOver" disabled class="form-control" />
            <span asp-validation-for="@Model.ClassificationMouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ClassificationMenuName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.ClassificationMenuName" disabled class="form-control" />
            <span asp-validation-for="@Model.ClassificationMenuName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">Delete</button>
            <a asp-action="LanguageIndex" asp-controller="ClassificationViewModel" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>

