@model SuObjectAndStatusViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewBag.Title = "Edit classification level";
}
<h1><img src="~/Images/Icons/levels.png" title="Levels" height="60" width="60" /> Create classification level</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.SuObject.ObjectId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.ObjectId" class="form-control" />
            <span asp-validation-for="@Model.SuObject.ObjectId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.Name" class="form-control" />
            <span asp-validation-for="@Model.SuObject.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.MouseOver" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.MouseOver" class="form-control" />
            <span asp-validation-for="@Model.SuObject.MouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.DateLevel" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.DateLevel" class="form-check" />
            <span asp-validation-for="@Model.SuObject.DateLevel" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.OnTheFly" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.OnTheFly" class="form-check" />
            <span asp-validation-for="@Model.SuObject.OnTheFly" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Alphabetically" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.Alphabetically" class="form-check" />
            <span asp-validation-for="@Model.SuObject.Alphabetically" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.CanLink" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.CanLink" class="form-check" />
            <span asp-validation-for="@Model.SuObject.CanLink" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.InDropDown" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.InDropDown" class="form-check" />
            <span asp-validation-for="@Model.SuObject.InDropDown" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">Add</button>
            <a asp-action="LevelIndex" asp-controller="ClassificationViewModel" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>

