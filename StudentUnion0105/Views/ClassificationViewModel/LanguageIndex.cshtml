@{
}@{
    ViewBag.Title = "Classification languages";
}
@model List<SuObjectVM>

    <h1 class="font-weight-bold"><img src="~/Images/Icons/languages.jpg" title="Languages" height="60" width="60" /> Classification languages</h1>
<table class="table table-bordered table-sm table-hover">

    <thead class="thead-dark">
        <tr><th>ID</th><th>Language</th><th>Name</th><th>Menu name</th><th>Mouse over name</th><th></th></tr>
    </thead>
    @foreach (var x in Model)

    {
<tr>
    <td style="width: 44px">@x.Id</td>
    <td>@x.Language</td>
    <td>@x.Name</td>
    <td>@x.MenuName</td>
    <td>@x.MouseOver</td>
    <td>@x.ObjectId</td>
    @*PETER TODO Hide the object ID somehow would be nice*@

    <td style="width: 22px"><a asp-controller="ClassificationViewModel" asp-action="LanguageEdit" asp-route-Id="@x.Id.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
</tr>
    }
</table>
<a asp-controller="ClassificationViewModel" asp-action="LanguageCreate" asp-route-id=@ViewBag.Id><img src="~/Images/Icons/languages.jpg" title="Create language" height="20" width="20" /> Create language</a>
<a asp-controller="ClassificationViewModel" asp-action="Index"><img src="~/Images/Icons/Classifications.png" title="Classifications" height="20" width="20" /> Back to classifications</a>