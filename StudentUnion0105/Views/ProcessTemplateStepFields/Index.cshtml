@{
}@{
    ViewBag.Title = "Fields for step";
}@{
    Layout = "_LayoutAdmin";
}

<h1 class="font-weight-bold"><img src="~/Images/Icons/Field.png" title="Fields" height="60" width="60" /> Fields for step</h1>
<table class="table table-bordered table-sm table-hover">

    <thead class="thead-dark">
        <tr><th>ID</th><th>Name</th><th></th><th></th><th></th><th></th></tr>
    </thead>
    @foreach (var x in Model)

    {
        <tr>
            <td style="width: 44px">@x.Id</td>
            <td>@x.Name</td>
            <td>@x.Description</td>
            <td style="width: 22px"><a asp-controller="ProcessTemplateFieldSteps" asp-action="Edit" asp-route-Id="@x.Id.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
        </tr>
    }
</table>
<a asp-controller="ProcessTemplateStep" asp-action="Index"><img src="~/Images/Icons/Step.jpg" title="Steps" height="20" width="20" /> Back to Steps</a>

