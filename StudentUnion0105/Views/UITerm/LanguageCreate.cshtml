@{
}
@{
    ViewBag.Title = "Create language";
}
<h1><img src="~/Images/Icons/languages.jpg" title="Languages" height="60" width="60" /> Edit language</h1>
<form class="mt-3" method="post">
    <div class="form-group row">
        <label asp-for="@Model.TermLanguage.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.TermLanguage.Id" class="form-control"  />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.TermLanguage.Customization" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.TermLanguage.Customization" class="form-control" />
            <span asp-validation-for="@Model.TermLanguage.Customization" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.TermLanguage.LanguageId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 ">

            @*@Html.DropDownListFor(x => x.Page.Status, new SelectList(Model.a, "Value", "Text"))*@
            @Html.DropDownListFor(x => x.TermLanguage.LanguageId, Model.LanguageList)
            <span asp-validation-for="@Model.TermLanguage.LanguageId" class="text-danger"></span>

        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">Create</button>
            <a asp-action="LanguageIndex" asp-controller="Page" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>

