@{
}@{
    ViewBag.Title = @ViewBag.Terms[0];
}
    <h1><img src="~/Images/Icons/Field.png" title="@ViewBag.Terms[0]" height="60" width="60" /> @ViewBag.Terms[0]</h1>
<form class="mt-3" method="post">

    <div class="form-group row" hidden>
        <label asp-for="@Model.Field.ObjectId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Field.ObjectId" class="form-control" />
            <span asp-validation-for="@Model.Field.ObjectId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Field.Id" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Field.Id" class="form-control" />
            <span asp-validation-for="@Model.Field.Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" hidden>
        <label asp-for="@Model.Field.LanguageId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Field.LanguageId" class="form-control" />
            <span asp-validation-for="@Model.Field.LanguageId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" hidden>
        <label asp-for="@Model.Field.ObjectLanguageId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Field.ObjectLanguageId" class="form-control" />
            <span asp-validation-for="@Model.Field.ObjectLanguageId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Field.Name" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Field.Name" class="form-control" />
            <span asp-validation-for="@Model.Field.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Field.Description" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.Field.Description" class="form-control ckeditor" id="description" name="description"></textarea>
            <span asp-validation-for="@Model.Field.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Field.MouseOver" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Field.MouseOver" class="form-control" />
            <span asp-validation-for="@Model.Field.MouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Field.NotNullId" class="col-sm-2 col-form-label">@ViewBag.Terms[5]</label>
        <div class="col-sm-10 ">
            @Html.DropDownListFor(x => x.Field.NotNullId, Model.DataTypes)
            <span asp-validation-for="@Model.Field.NotNullId" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Field.NotNullId2" class="col-sm-2 col-form-label">@ViewBag.Terms[6]</label>
        <div class="col-sm-10 ">

            @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
            @Html.DropDownListFor(x => x.Field.NotNullId2, Model.MasterList)
            <span asp-validation-for="@Model.Field.NotNullId2" class="text-danger"></span>

        </div>
    </div>        <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[7]</button>
            <a asp-action="Index" asp-controller="PageSection" class="btn btn-primary btn-light">@ViewBag.Terms[8]</a>
        </div>
    </div>
</form>


<script>
            $(document).ready(function () {
                if (CKEDITOR.instances['description']) {
                    CKEDITOR.instances['description'].destroy();
                }
                CKEDITOR.replace('description', {
                    fullPage: false, uiColor: '#efe8ce'
                });
                $('#getVal').on('click', function (e) {
                    let ckValue = CKEDITOR.instances['description'].getData()
                    console.log(ckValue);
                });
            });
</script>