@using Syncfusion.JavaScript;
@using Syncfusion.JavaScript.Models;
@model SuPreferenceLeftMenuCreateGetModel
@{
   // ViewBag.Title = ViewBag.Terms[0];
}
@{
    Layout = "_LayoutAdmin";
}
    <h1><img src="~/Images/Icons/Menu.png" height="60" width="60" /> ViewBag.Terms[0]</h1>
    <form class="mt-3" method="post">

        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.Id" class="col-sm-2 col-form-label">ViewBag.Terms[1]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.CreateMenuUser.Id" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.MenuShow" class="col-sm-2 col-form-label">ViewBag.Terms[5]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.CreateMenuUser.MenuShow" class="form-control" />ViewBag.Terms[0]
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.MenuAddShow" class="col-sm-2 col-form-label">ViewBag.Terms[5]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.CreateMenuUser.MenuAddShow" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.SearchShow" class="col-sm-2 col-form-label">ViewBag.Terms[5]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.CreateMenuUser.SearchShow" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.AdvancedSearchShow" class="col-sm-2 col-form-label">ViewBag.Terms[5]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.CreateMenuUser.AdvancedSearchShow" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.MenuName" class="col-sm-2 col-form-label">ViewBag.Terms[5]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.CreateMenuUser.MenuName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.MenuURL" class="col-sm-2 col-form-label">ViewBag.Terms[5]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.CreateMenuUser.MenuURL" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.LeftMenuId" class="col-sm-2 col-form-label">ViewBag.Terms[11]</label>
            <div class="col-sm-10 ">

                @Html.DropDownListFor(x => x.CreateMenuUser.LeftMenuId, Model.AvailableMenus)
                <span asp-validation-for="@Model.CreateMenuUser.LeftMenuId" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CreateMenuUser.Sequence" class="col-sm-2 col-form-label">ViewBag.Terms[11]</label>
            <div class="col-sm-10 ">

                @Html.DropDownListFor(x => x.CreateMenuUser.Sequence, Model.ExistingMenus)
                <span asp-validation-for="@Model.CreateMenuUser.Sequence" class="text-danger"></span>

            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary btn-dark">ViewBag.Terms[12]</button>
                <a asp-action="LeftMenu" asp-controller="Preference" class="btn btn-primary btn-light">ViewBag.Terms[13]</a>
            </div>
        </div>
    </form>