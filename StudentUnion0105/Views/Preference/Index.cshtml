@model SuPreferenceIndexGetWithListsModel
@{
   // ViewBag.Title = @ViewBag.Terms[0];
}
    <h1><img src="~/Images/Icons/pages.jpg" title="ViewBag.Terms[0]" height="60" width="60" /> ViewBag.Terms[0]</h1>
    <form class="mt-3" method="post">

        <div class="form-group row">
            <label asp-for="@Model.Preference.Id" class="col-sm-2 col-form-label">ViewBag.Terms[1]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Preference.Id" class="form-control" />
                <span asp-validation-for="@Model.Preference.Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Preference.DefaultLanguageId" class="col-sm-2 col-form-label">ViewBag.Terms[7]</label>
            <div class="col-sm-10 ">

                @Html.DropDownListFor(x => x.Preference.DefaultLanguageId, Model.Languages)
                <span asp-validation-for="@Model.Preference.DefaultLanguageId" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Preference.CountryId" class="col-sm-2 col-form-label">ViewBag.Terms[7]</label>
            <div class="col-sm-10 ">

                @Html.DropDownListFor(x => x.Preference.CountryId, Model.Countries)
                <span asp-validation-for="@Model.Preference.CountryId" class="text-danger"></span>

            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary btn-dark">ViewBag.Terms[9]</button>
                <a asp-action="Index" asp-controller="Page" class="btn btn-primary btn-light">ViewBag.Terms[10]</a>
            </div>
        </div>
    </form>

<script>
    $(document).ready(function () {
        if (CKEDITOR.instances['description']) {
            CKEDITOR.instances['description'].destroy();
        }
        CKEDITOR.replace('description', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['description'].getData()
            console.log(ckValue);
        });
    });

    $(document).ready(function () {
        if (CKEDITOR.instances['pagedescription']) {
            CKEDITOR.instances['pagedescription'].destroy();
        }
        CKEDITOR.replace('pagedescription', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['pagedescription'].getData()
            console.log(ckValue);
        });
    });

</script>