@using Syncfusion.JavaScript;
@using Syncfusion.JavaScript.Models;
@model SuPreferenceLeftMenuEditGetModelWithList
@{
    ViewBag.Title = "Edit menu";
}
@{
    Layout = "_LayoutAdmin";
}
<h1><img src="~/Images/Icons/Menu.png" height="60" width="60" /> Left menu edit</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.MenuEdit.UserMenuId" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuEdit.UserMenuId" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MenuEdit.MenuShow" class="col-sm-2 col-form-label">Show menu</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuEdit.MenuShow" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MenuEdit.MenuAddShow" class="col-sm-2 col-form-label">Show add menu</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuEdit.MenuAddShow" class="form-control" />
            <span asp-validation-for="@Model.MenuEdit.MenuAddShow" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MenuEdit.SearchShow" class="col-sm-2 col-form-label">Show search</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuEdit.SearchShow" class="form-control" />
            <span asp-validation-for="@Model.MenuEdit.SearchShow" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MenuEdit.AdvancedSearchShow" class="col-sm-2 col-form-label">Show AdvancedSearchShow</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuEdit.AdvancedSearchShow" class="form-control" />
            <span asp-validation-for="@Model.MenuEdit.AdvancedSearchShow" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MenuEdit.MenuName" class="col-sm-2 col-form-label">MenuName</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuEdit.MenuName" class="form-control" />
            <span asp-validation-for="@Model.MenuEdit.MenuName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MenuEdit.MenuURL" class="col-sm-2 col-form-label">MenuURL</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuEdit.MenuURL" class="form-control" />
            <span asp-validation-for="@Model.MenuEdit.MenuURL" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MenuEdit.Sequence" class="col-sm-2 col-form-label">Seque</label>
        <div class="col-sm-10 ">

            @Html.DropDownListFor(x => x.MenuEdit.Sequence, Model.OtherMenus)
            <span asp-validation-for="@Model.MenuEdit.Sequence" class="text-danger"></span>

        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">update</button>
            <a asp-action="LeftMenu" asp-controller="Preference"  class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>