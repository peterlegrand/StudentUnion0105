@model SuObjectAndStatusViewModel
@{
    ViewBag.Title = @ViewBag.Terms[0];
}
@{
    Layout = "_LayoutAdmin";
}
<h1><img src="~/Images/Icons/Classifications.png" height="60" title="@ViewBag.Terms[0]" width="60" /> @ViewBag.Terms[0]</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.SuObject.Id" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.Id" class="form-control" />
        </div>
    </div>
    <div class="form-group row" hidden>
        <label asp-for="@Model.SuObject.ObjectLanguageId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.ObjectLanguageId" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Name" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.Name" class="form-control" />
            <span asp-validation-for="@Model.SuObject.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Description" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.SuObject.Description" class="form-control ckeditor" id="descriptionx" name="SuObject.Description"></textarea>
            <span asp-validation-for="@Model.SuObject.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.MouseOver" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.MouseOver" class="form-control" />
            <span asp-validation-for="@Model.SuObject.MouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.NotNullId" class="col-sm-2 col-form-label">@ViewBag.Terms[5]</label>
        <div class="col-sm-10 ">

            @Html.DropDownListFor(x => x.SuObject.NotNullId, Model.SomeKindINumSelectListItem)
            <span asp-validation-for="@Model.SuObject.NotNullId" class="text-danger"></span>

        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[6]</button>
            <a asp-action="Index" asp-controller="ProcessTemplate" class="btn btn-primary btn-light">@ViewBag.Terms[7]</a>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        if (CKEDITOR.instances['descriptionx']) {
            CKEDITOR.instances['descriptionx'].destroy();
        }
        CKEDITOR.replace('descriptionx', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['descriptionx'].getData()
            console.log(ckValue);
        });
    });
</script>