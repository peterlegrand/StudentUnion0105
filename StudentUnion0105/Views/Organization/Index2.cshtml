@model ObjectsOf5LevelsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewBag.Title = "Organizations";
}
@{
    Layout = "_LayoutAdmin";
}
<h1 class="font-weight-bold">
    <img src="~/Images/Icons/Organization.png" height="60" width="60" /> Organizations
</h1>
<div class="table-responsive">
    <table class="table table-bordered table-sm table-hover">

        <thead class="thead-dark">
            <tr><th colspan="3" style="width: 45px">ID</th><th>Name</th><th></th><th></th><th></th><th></th></tr>
        </thead>
        @foreach (var x1 in Model.SuObject1)

        {
            <tr>

                <td colspan="3" style="width: 45px">@x1.Id</td>

                <td>@x1.Name</td>
                <td style="width: 22px"><a asp-controller="Organization" asp-action="Edit" asp-route-Id="@x1.Id.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
                <td style="width: 22px"><a asp-controller="Organization" asp-action="LanguageIndex" asp-route-id="@x1.Id.ToString()"><img src="~/Images/Icons/languages.jpg" title="Languages" height="20" width="20" /></a></td>
                <td style="width: 22px"><a asp-controller="Organization" asp-action="Delete" asp-route-id="@x1.Id.ToString()"><img src="~/Images/Icons/delete.png" title="Delete" height="20" width="20" /></a></td>
                <td style="width: 22px"><a asp-controller="Organization" asp-action="Create" asp-route-id="@x1.Id.ToString()"><img src="~/Images/Icons/Add.png" title="Add organization" height="20" width="20" /></a></td>
            </tr>
            foreach (var x2 in Model.SuObject2)
            {
                if (x1.Id == x2.NullId)
                {
                    <tr>
                        <td style="width: 15px"></td>
                        <td colspan="2" style="width: 30px">@x2.Id</td>
                        <td>@x2.Name</td>
                        <td style="width: 22px"><a asp-controller="Organization" asp-action="Edit" asp-route-Id="@x2.Id.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
                        <td style="width: 22px"><a asp-controller="Organization" asp-action="LanguageIndex" asp-route-id="@x2.Id.ToString()"><img src="~/Images/Icons/languages.jpg" title="Languages" height="20" width="20" /></a></td>
                        <td style="width: 22px"><a asp-controller="Organization" asp-action="Delete" asp-route-id="@x2.Id.ToString()"><img src="~/Images/Icons/delete.png" title="Delete" height="20" width="20" /></a></td>
                        <td style="width: 22px"><a asp-controller="Organization" asp-action="Create" asp-route-id="@x2.Id.ToString()"><img src="~/Images/Icons/Add.png" title="Add organization" height="20" width="20" /></a></td>
                    </tr>
                    foreach (var x3 in Model.SuObject3)
                    {
                        if (x2.Id == x3.NullId)
                        {
                            <tr>
                                <td style="width: 15px"></td>
                                <td style="width: 15px"></td>
                                <td style="width: 15px">@x3.Id</td>

                                <td>@x3.Name</td>
                                <td style="width: 22px"><a asp-controller="Organization" asp-action="Edit" asp-route-Id="@x3.Id.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
                                <td style="width: 22px"><a asp-controller="Organization" asp-action="LanguageIndex" asp-route-id="@x3.Id.ToString()"><img src="~/Images/Icons/languages.jpg" title="Languages" height="20" width="20" /></a></td>
                                <td style="width: 22px"><a asp-controller="Organization" asp-action="Delete" asp-route-id="@x3.Id.ToString()"><img src="~/Images/Icons/delete.png" title="Delete" height="20" width="20" /></a></td>
                                <td style="width: 22px"><img src="~/Images/Icons/Addgray.png" title="Add organization" height="20" width="20" /></td>
                            </tr>
                        }
                    }
                }
            }
        }
    </table>
</div>
<a asp-controller="Organization" asp-action="Create" asp-route-Id="0"><img src="~/Images/Icons/Organization.png" title="New organization" height="20" width="20" /> Create new top level organization</a>
