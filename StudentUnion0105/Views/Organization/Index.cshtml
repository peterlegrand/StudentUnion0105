@{
}
@{
    ViewBag.Title = "Organizations";
}
<h1 class="font-weight-bold">
    <img src="~/Images/Icons/Organization.png" height="60" width="60" /> Organizations
</h1>
<div class="table-responsive">
    <table class="table table-bordered table-sm table-hover">

        <thead class="thead-dark">
            <tr>
                @{var a = Model.MaxLevel + 1;
                var b = a * 10;
                    <th colspan="@a" style="width: @b px">ID</th>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    }
                </tr>    
            </thead>
            @foreach (var x in Model.OrgStructure)

        {
        var z = Model.MaxLevel - x.Level+1;
            int y = 0;

            <tr>
                @while ( y  <  x.Level)
            {
                <td style="width:10px"></td>
            y++;
            }

                <td  style="width:10px" colspan="@z">@x.Id</td>
                <td>@x.Name</td>
                <td style="width: 22px"><a asp-controller="Organization" asp-action="Edit" asp-route-Id="@x.Id.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
                <td style="width: 22px"><a asp-controller="Organization" asp-action="LanguageIndex" asp-route-id="@x.Id.ToString()"><img src="~/Images/Icons/languages.jpg" title="Languages" height="20" width="20" /></a></td>
                <td style="width: 22px"><a asp-controller="Organization" asp-action="Delete" asp-route-id="@x.Id.ToString()"><img src="~/Images/Icons/delete.png" title="Delete" height="20" width="20" /></a></td>
                <td style="width: 22px"><a asp-controller="Organization" asp-action="Create" asp-route-id="@x.Id.ToString()"><img src="~/Images/Icons/Add.png" title="Add organization" height="20" width="20" /></a></td>
            </tr>
        }
        </table>
    </div>
    <a asp-controller="Organization" asp-action="Create"><img src="~/Images/Icons/Organization.png" title="New organization" height="20" width="20" /> Create new organization</a>
