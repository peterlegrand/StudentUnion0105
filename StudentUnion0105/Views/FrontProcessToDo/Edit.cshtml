@{
}@{
//ViewBag.Title = ViewBag.Terms[0];
}
    <h1 class="font-weight-bold">
        <img src="~/Images/Icons/Todo.png" height="60" width="60" /> ViewBag.Terms[0]
    </h1>
<div class="table-responsive" >
    <table class="table table-bordered table-sm table-hover">

        <thead>
            <tr><th>ViewBag.Terms[1]</th><th>ViewBag.Terms[2]</th><th>ViewBag.Terms[3]</th></tr>
        </thead>
        @foreach (var x in Model)

        {
    <tr>
        @if (x.FieldDataTypeId == 1 )
        {
            <td>@x.Name</td>
            <td>
                <div class="col-sm-10">
                    @if (x.StatusId == 1)
                    {
                        <input asp-for="@x.Name" class="form-control" hidden />
                    }
                    @if (x.StatusId == 2)
                    {
                        <input asp-for="@x.Name" class="form-control" disabled />
                    }
                    @if (x.StatusId != 1 && x.StatusId != 2  )
                    {
                        <input asp-for="@x.Name" class="form-control"/>
                    }
                    <span asp-validation-for="@x.StringValue" class="text-danger"></span>
                </div>
            </td>
        }
        @if (x.FieldDataTypeId == 5 && x.StatusId !=1)
        {
            <td>
                <button type="submit" class="btn btn-primary btn-dark">@x.Name</button>

            </td>
            <td>
            </td>
        }
        @if (x.FieldDataTypeId == 6 && x.StatusId !=1)
        {
    <td>
        <a asp-action="Index" asp-controller="Classification" asp-route-id="1" class="btn btn-primary btn-light">@x.Name</a>

    </td>
            <td>
            </td>
        }
    </tr>
        }
    </table>
</div>
