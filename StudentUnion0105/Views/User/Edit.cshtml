@model SuUserAndLists
@{
    ViewBag.Title = "Edit user";
}
<h1><img src="~/Images/Icons/Classifications.png" height="60" width="60" /> Edit classification</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.User.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.User.Id" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.User.UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.User.UserName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.User.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.User.Email" class="form-control" />
            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.User.DefaultLanguageId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 ">

            @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
            @Html.DropDownListFor(x => x.User.DefaultLanguageId, Model.Languages)
            <span asp-validation-for="@Model.User.DefaultLanguageId" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.User.CountryId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 ">

            @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
            @Html.DropDownListFor(x => x.User.CountryId, Model.Countries)
            <span asp-validation-for="@Model.User.CountryId" class="text-danger"></span>

        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">Update</button>
            <a asp-action="Index" asp-controller="User" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>
