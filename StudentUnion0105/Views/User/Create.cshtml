@model SuUserAndLists
@{
    ViewBag.Title = @ViewBag.Terms[0];
}@{
    Layout = "_LayoutAdmin";
}

<h1><img src="~/Images/Icons/Classifications.png" height="60" width="60" /> @ViewBag.Terms[0]</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.User.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.User.Id" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.User.UserName" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.User.UserName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.User.Email" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.User.Email" class="form-control" />
            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.User.DefaultLanguageId" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
        <div class="col-sm-10 ">

            @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
            @Html.DropDownListFor(x => x.User.DefaultLanguageId, Model.Languages)
            <span asp-validation-for="@Model.User.DefaultLanguageId" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.User.CountryId" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
        <div class="col-sm-10 ">

            @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
            @Html.DropDownListFor(x => x.User.CountryId, Model.Countries)
            <span asp-validation-for="@Model.User.CountryId" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.Password">@ViewBag.Terms[5]</label>
        <input asp-for="@Model.User.Password" class="form-control" />
        <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.ConfirmPassword">@ViewBag.Terms[6]</label>
        <input asp-for="@Model.User.ConfirmPassword" class="form-control" />
        <span asp-validation-for="@Model.User.ConfirmPassword" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[7]</button>
            <a asp-action="Index" asp-controller="User" class="btn btn-primary btn-light">@ViewBag.Terms[8]</a>
        </div>
    </div>
</form>
