@model SuObjectVM
@{
    ViewBag.Title = "Create organization";
}
<h1><img src="~/Images/Icons/Organization.png" height="60" width="60" /> Create organization</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.NullId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.NullId" class="form-control" />
            <span asp-validation-for="@Model.NullId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ObjectId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.ObjectId" class="form-control" />
            <span asp-validation-for="@Model.ObjectId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.Description" class="form-control ckeditor" id="description" name="description"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
    </div>
    @if (Model.InDropDown)
    {
        <div class="form-group row">
            <label asp-for="@Model.DropDownName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.DropDownName" class="form-control" />
                <span asp-validation-for="@Model.DropDownName" class="text-danger"></span>
            </div>
        </div>
    }<div class="form-group row">
        <label asp-for="@Model.MenuName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuName" class="form-control" />
            <span asp-validation-for="@Model.MenuName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MouseOver" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.MouseOver" class="form-control" />
            <span asp-validation-for="@Model.MouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.PageName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.PageName" class="form-control" />
            <span asp-validation-for="@Model.PageName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.PageDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.PageDescription" class="form-control ckeditor" id="pagedescription" name="pageDescription"></textarea>
            <span asp-validation-for="@Model.PageDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.HeaderName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.HeaderName" class="form-control" />
            <span asp-validation-for="@Model.HeaderName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.HeaderDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.HeaderDescription" class="form-control ckeditor" id="HeaderDescription" name="HeaderDescription"></textarea>
            <span asp-validation-for="@Model.HeaderDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.TopicName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.TopicName" class="form-control" />
            <span asp-validation-for="@Model.TopicName" class="text-danger"></span>
        </div>
    </div>
    @if (Model.DateLevel == 1 || Model.DateLevel == 2)
    {<div class="form-group row">
            @Html.Label("From date", null,
                 new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <input asp-for="@Model.DateFrom" type="date" class="form-control" />
            </div>
        </div>
    }
    @if (Model.DateLevel == 3 || Model.DateLevel == 4)
    {<div class="form-group row">
            @Html.Label("From date", null,
                 new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <input asp-for="@Model.DateFrom" type="datetime-local" class="form-control" />
            </div>
        </div>
    }
    @if (Model.DateLevel == 2)
    {<div class="form-group row">
            @Html.Label("From date", null,
                 new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <input asp-for="@Model.DateTo" type="date" class="form-control" />
            </div>
        </div>
    }
    @if (Model.DateLevel == 4)
    {<div class="form-group row">
            @Html.Label("From date", null,
                 new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <input asp-for="@Model.DateTo" type="datetime-local" class="form-control" />
            </div>
        </div>
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">Add</button>
            <a asp-action="Index" asp-controller="Organization" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>

<script>
            $(document).ready(function () {
                if (CKEDITOR.instances['description']) {
                    CKEDITOR.instances['description'].destroy();
                }
                CKEDITOR.replace('description', {
                    fullPage: false, uiColor: '#efe8ce'
                });
                $('#getVal').on('click', function (e) {
                    let ckValue = CKEDITOR.instances['description'].getData()
                    console.log(ckValue);
                });
            });

            $(document).ready(function () {
                if (CKEDITOR.instances['pagedescription']) {
                    CKEDITOR.instances['pagedescription'].destroy();
                }
                CKEDITOR.replace('pagedescription', {
                    fullPage: false, uiColor: '#efe8ce'
                });
                $('#getVal').on('click', function (e) {
                    let ckValue = CKEDITOR.instances['pagedescription'].getData()
                    console.log(ckValue);
                });
            });

                $(document).ready(function () {
                if (CKEDITOR.instances['headerdescription']) {
                    CKEDITOR.instances['headerdescription'].destroy();
                }
                CKEDITOR.replace('headerdescription', {
                    fullPage: false, uiColor: '#efe8ce'
                });
                $('#getVal').on('click', function (e) {
                    let ckValue = CKEDITOR.instances['headerdescription'].getData()
                    console.log(ckValue);
                });
            });

</script>