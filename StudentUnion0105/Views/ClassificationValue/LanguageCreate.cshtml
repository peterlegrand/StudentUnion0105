@model SuObjectAndStatusViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewBag.Title = @ViewBag.Terms[13];
}
@{
    Layout = "_LayoutAdmin";
}
<h1><img src="~/Images/Icons/languages.jpg" title="@ViewBag.Terms[13]" height="60" width="60" /> @ViewBag.Terms[13]</h1>
<form class="mt-3" method="post">
    <div class="form-group row" hidden>
        <label asp-for="@Model.SuObject.ObjectId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.ObjectId" class="form-control" hidden />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Name" class="col-sm-2 col-form-label">@ViewBag.Terms[0]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.Name" class="form-control" />
            <span asp-validation-for="@Model.SuObject.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Description" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.SuObject.Description" class="form-control ckeditor" id="description" name="description"></textarea>
            <span asp-validation-for="@Model.SuObject.Description" class="text-danger"></span>
        </div>
    </div>
    @if (ViewBag.ShowInDropDown)
    {
        <div class="form-group row">
            <label asp-for="@Model.SuObject.DropDownName" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.SuObject.DropDownName" class="form-control" />
                <span asp-validation-for="@Model.SuObject.DropDownName" class="text-danger"></span>
            </div>
        </div>
    }<div class="form-group row">
        <label asp-for="@Model.SuObject.MenuName" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.MenuName" class="form-control" />
            <span asp-validation-for="@Model.SuObject.MenuName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.MouseOver" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.MouseOver" class="form-control" />
            <span asp-validation-for="@Model.SuObject.MouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Title" class="col-sm-2 col-form-label">@ViewBag.Terms[5]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.Title" class="form-control" />
            <span asp-validation-for="@Model.SuObject.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.PageDescription" class="col-sm-2 col-form-label">@ViewBag.Terms[6]</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.SuObject.PageDescription" class="form-control ckeditor" id="pagedescription" name="pageDescription"></textarea>
            <span asp-validation-for="@Model.SuObject.PageDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.HeaderName" class="col-sm-2 col-form-label">@ViewBag.Terms[7]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.HeaderName" class="form-control" />
            <span asp-validation-for="@Model.SuObject.HeaderName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.HeaderDescription" class="col-sm-2 col-form-label">@ViewBag.Terms[8]</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.SuObject.HeaderDescription" class="form-control ckeditor" id="HeaderDescription" name="HeaderDescription"></textarea>
            <span asp-validation-for="@Model.SuObject.HeaderDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.TopicName" class="col-sm-2 col-form-label">@ViewBag.Terms[9]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.TopicName" class="form-control" />
            <span asp-validation-for="@Model.SuObject.TopicName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.LanguageId" class="col-sm-2 col-form-label">@ViewBag.Terms[10]</label>
        <div class="col-sm-10 ">

            @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
            @Html.DropDownListFor(x => x.SuObject.LanguageId, Model.SomeKindINumSelectListItem)
            <span asp-validation-for="@Model.SuObject.Status" class="text-danger"></span>

        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[11]</button>
            <a asp-action="LanguageIndex" asp-controller="ClassificationLevel" class="btn btn-primary btn-light">@ViewBag.Terms[12]</a>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        if (CKEDITOR.instances['description']) {
            CKEDITOR.instances['description'].destroy();
        }
        CKEDITOR.replace('description', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['description'].getData()
            console.log(ckValue);
        });
    });
</script>