@{
}@{
    ViewBag.Title = "Classification value languages";
}
@model List<SuObjectVM>

    <h1 class="font-weight-bold"><img src="~/Images/Icons/languages.jpg" title="Languages" height="60" width="60" /> Classification value languages</h1>
<table class="table table-bordered table-sm table-hover">

    <thead class="thead-dark">
        <tr><th>ID</th><th>Language</th><th>Name</th><th></th><th></th><th></th></tr>
    </thead>
    @foreach (var x in Model)

    {
<tr>
    <td style="width: 44px">@x.Id</td>
    <td>@x.Language</td>
    <td>@x.Name</td>
    <td>@x.ObjectId</td>
    @*PETER TODO Hide the object ID somehow would be nice*@

    <td style="width: 22px"><a asp-controller="ClassificationValue" asp-action="LanguageEdit" asp-route-Id="@x.Id.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
    <td style="width: 22px"><a asp-controller="ClassificationValue" asp-action="LanguageDelete" asp-route-Id="@x.Id.ToString()"><img src="~/Images/Icons/delete.png" title="Delete" height="20" width="20" /></a></td>
</tr>
    }
</table>
<a asp-controller="ClassificationValue" asp-action="LanguageCreate" asp-route-id=@ViewBag.Id  asp-route-CId="@ViewBag.CId"><img src="~/Images/Icons/languages.jpg" title="Create language" height="20" width="20" /> Add language</a>
<a asp-controller="ClassificationValue" asp-action="Index"><img src="~/Images/Icons/values.png" title="Classification Values" height="20" width="20" /> Back to classification levels</a>