@{
    ViewBag.Title = @ViewBag.Terms[0];
}
@model List<SuObjectLanguageIndexGetModel>  

    <h1 class="font-weight-bold"><img src="~/Images/Icons/languages.jpg" title="@ViewBag.Terms[0]" height="60" width="60" /> @ViewBag.Terms[0]</h1>
<table class="table table-bordered table-sm table-hover">

    <thead class="thead-dark">
        <tr><th>@ViewBag.Terms[1]</th><th>@ViewBag.Terms[2]</th><th>@ViewBag.Terms[3]</th><th>@ViewBag.Terms[4]</th><th>@ViewBag.Terms[5]</th><th></th><th></th></tr>
    </thead>
    @foreach (var x in Model)

    {
<tr>
    <td style="width: 44px">@x.LId</td>
    <td>@x.LanguageName</td>
    <td>@x.Name</td>
    <td>@x.MenuName</td>
    <td>@x.MouseOver</td>
    <td hidden>@x.OId</td>
    @*PETER TODO Hide the object ID somehow would be nice*@

    <td style="width: 22px"><a asp-controller="ClassificationPage" asp-action="LanguageEdit" asp-route-Id="@x.LId.ToString()"><img src="~/Images/Icons/open.png" title="@ViewBag.Terms[6]" height="20" width="20" /></a></td>
    <td style="width: 22px"><a asp-controller="ClassificationPage" asp-action="LanguageDelete" asp-route-Id="@x.LId.ToString()"><img src="~/Images/Icons/delete.png" title="@ViewBag.Terms[7]" height="20" width="20" /></a></td>
</tr>
    }
</table>
<a asp-controller="ClassificationPage" asp-action="LanguageCreate" asp-route-id=@ViewBag.Id asp-route-CId="@ViewBag.CId"><img src="~/Images/Icons/languages.jpg" title="@ViewBag.Terms[5]" height="20" width="20" /> @ViewBag.Terms[8]</a>
<a asp-controller="ClassificationPage" asp-action="Index" asp-route-id=@Model.First().PId.ToString()><img src="~/Images/Icons/levels.png" title="@ViewBag.Terms[6]" height="20" width="20" /> @ViewBag.Terms[9]</a>