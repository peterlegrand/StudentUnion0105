@model SuClassificationPageEditGetWithListModel
@{
    ViewBag.Title = @ViewBag.Terms[0];
}
    <h1><img src="~/Images/Icons/pages.jpg" title="@ViewBag.Terms[0]" height="60" width="60" /> @ViewBag.Terms[0]</h1>
    <form class="mt-3" method="post">

        <div class="form-group row" hidden>
            <label asp-for="@Model.ClassificationPage.PId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.ClassificationPage.PId" class="form-control" />
                <span asp-validation-for="@Model.ClassificationPage.PId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.Name" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.ClassificationPage.Name" class="form-control" />
                <span asp-validation-for="@Model.ClassificationPage.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.Description" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
            <div class="col-sm-10">
                <textarea asp-for="@Model.ClassificationPage.Description" class="form-control ckeditor" id="description" name="ClassificationPage.description"></textarea>
                <span asp-validation-for="@Model.ClassificationPage.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.MouseOver" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.ClassificationPage.MouseOver" class="form-control" />
                <span asp-validation-for="@Model.ClassificationPage.MouseOver" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.MenuName" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.ClassificationPage.MenuName" class="form-control" />
                <span asp-validation-for="@Model.ClassificationPage.MenuName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.StatusId" class="col-sm-2 col-form-label">@ViewBag.Terms[5]</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(x => x.ClassificationPage.StatusId, Model.StatusList)
                <span asp-validation-for="@Model.ClassificationPage.StatusId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.ShowTitleName" class="col-sm-2 col-form-label">@ViewBag.Terms[6]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.ClassificationPage.ShowTitleName" class="form-check" />
                <span asp-validation-for="@Model.ClassificationPage.ShowTitleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.ShowTitleDescription" class="col-sm-2 col-form-label">@ViewBag.Terms[7]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.ClassificationPage.ShowTitleDescription" class="form-check" />
                <span asp-validation-for="@Model.ClassificationPage.ShowTitleDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.TitleName" class="col-sm-2 col-form-label">@ViewBag.Terms[8]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.ClassificationPage.TitleName" class="form-check" />
                <span asp-validation-for="@Model.ClassificationPage.TitleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ClassificationPage.Description" class="col-sm-2 col-form-label">@ViewBag.Terms[9]</label>
            <div class="col-sm-10">
                <textarea asp-for="@Model.ClassificationPage.Description" class="form-control ckeditor" id="description2" name="ClassificationPage.TitleDescription"></textarea>
                <span asp-validation-for="@Model.ClassificationPage.Description" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[10]</button>
                <a asp-action="Index" asp-controller="ClassificationPage" class="btn btn-primary btn-light">@ViewBag.Terms[11]</a>
            </div>
        </div>
    </form>


<script>
            $(document).ready(function () {
                if (CKEDITOR.instances['description']) {
                    CKEDITOR.instances['description'].destroy();
                }
                CKEDITOR.replace('description', {
                    fullPage: false, uiColor: '#efe8ce'
                });
                $('#getVal').on('click', function (e) {
                    let ckValue = CKEDITOR.instances['description'].getData()
                    console.log(ckValue);
                });
            });
            $(document).ready(function () {
                if (CKEDITOR.instances['description2']) {
                    CKEDITOR.instances['description2'].destroy();
                }
                CKEDITOR.replace('description2', {
                    fullPage: false, uiColor: '#efe8ce'
                });
                $('#getVal').on('click', function (e) {
                    let ckValue = CKEDITOR.instances['description2'].getData()
                    console.log(ckValue);
                });
            });
</script>