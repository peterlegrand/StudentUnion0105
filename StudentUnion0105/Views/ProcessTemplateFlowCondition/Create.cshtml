@{
}
@{
    ViewBag.Title = "Edit Flow condition";
}@{
    Layout = "_LayoutAdmin";
}

<h1><img src="~/Images/Icons/condition.png" title="Levels" height="60" width="60" /> Create flow condition</h1>
<form method="post">
    <div class="row ">
        <div class="form-group col-md-3  invisible">
            <label asp-for="@Model.Condition.OId" class=" col-form-label "></label>
        </div><div class="col-md-1 invisible">
            <input asp-for="@Model.Condition.OId" class="form-control form-control-sm " />
            <span asp-validation-for="@Model.Condition.OId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3 ">
            <label asp-for="@Model.Condition.LId" class="col-form-label "></label>
        </div><div class="col-md-1 ">
            <input asp-for="@Model.Condition.LId" class="form-control form-control-sm " />
            <span asp-validation-for="@Model.Condition.LId" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Condition.Name" class="col-sm-2 col-form-label col-form-label-sm"></label>
        <div class="col-sm-4">
            <input asp-for="@Model.Condition.Name" class="form-control form-control-sm" />
            <span asp-validation-for="@Model.Condition.Name" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="@Model.Condition.Description" class="col-sm-2 col-form-label col-form-label-sm"></label>
        <div class="col-sm-4">
            <textarea asp-for="@Model.Condition.Description" class="form-control ckeditor " id="description" name="SuObject.Description"></textarea>
            <span asp-validation-for="@Model.Condition.Description" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">Update</button>
            <a asp-action="Index" asp-controller="PageSection" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>


<script>
    $(document).ready(function () {
        if (CKEDITOR.instances['description']) {
            CKEDITOR.instances['description'].destroy();
        }
        CKEDITOR.replace('description', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['description'].getData()
            console.log(ckValue);
        });
    });
</script>