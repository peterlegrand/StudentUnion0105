@model SuObjectVM
@{
    ViewBag.Title = "Edit classification";
}@{
    Layout = "_LayoutAdmin";
}

<h1><img src="~/Images/Icons/Settings.png" height="60" width="60" /> Edit setting</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.NullId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.NullId" class="form-control" />
            <span asp-validation-for="@Model.NullId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Description2" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Description2" class="form-control" />
            <span asp-validation-for="@Model.Description2" class="text-danger"></span>
        </div>
    </div>
    @*<div class="form-group row">
            <label asp-for="@Model.SuObject.Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.SuObject.Description" class="form-control" />
                <span asp-validation-for="@Model.SuObject.Description" class="text-danger"></span>
            </div>
        </div>*@
    <div class="form-group row">
        <label asp-for="@Model.DateFrom" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.DateFrom" class="form-control ckeditor" id="descriptionx" name="SuObject.Description"></textarea>
            <span asp-validation-for="@Model.DateFrom" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Description" class="form-control" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">Update</button>
            <a asp-action="Index" asp-controller="Classification" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        if (CKEDITOR.instances['descriptionx']) {
            CKEDITOR.instances['descriptionx'].destroy();
        }
        CKEDITOR.replace('descriptionx', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['descriptionx'].getData()
            console.log(ckValue);
        });
    });
</script>