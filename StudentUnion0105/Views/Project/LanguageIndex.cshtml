@{
}@{
    ViewBag.Title = "Project languages";
}
@model List<SuObjectLanguageIndexGetModel>

<h1 class="font-weight-bold"><img src="~/Images/Icons/languages.jpg" title="Languages" height="60" width="60" /> Project languages</h1>
<table class="table table-bordered table-sm table-hover">

    <thead class="thead-dark">
        <tr><th>ID</th><th>Language</th><th>Name</th><th>Description</th><th>Mouse over name</th><th></th><th></th><th></th></tr>
    </thead>
    @foreach (var x in Model)

    {
        <tr>
            <td style="width: 44px">@x.LId</td>
            <td>@x.Language</td>
            <td>@x.Name</td>
            <td>@x.Description</td>
            <td>@x.MouseOver</td>
            <td>@x.Id</td>
            @*PETER TODO Hide the object ID somehow would be nice*@

            <td style="width: 22px"><a asp-controller="Project" asp-action="LanguageEdit" asp-route-Id="@x.LId.ToString()"><img src="~/Images/Icons/open.png" title="Edit" height="20" width="20" /></a></td>
            <td style="width: 22px"><a asp-controller="Project" asp-action="LanguageDelete" asp-route-Id="@x.LId.ToString()"><img src="~/Images/Icons/delete.png" title="Delete" height="20" width="20" /></a></td>
        </tr>
    }
</table>
<a asp-controller="Project" asp-action="LanguageCreate" asp-route-id=@ViewBag.Id><img src="~/Images/Icons/languages.jpg" title="Create language" height="20" width="20" /> Create language</a>
<a asp-controller="Project" asp-action="Index"><img src="~/Images/Icons/Project.png" title="Projects" height="20" width="20" /> Back to Projects</a>