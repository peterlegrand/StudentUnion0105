@model SuPageEditGetWithListModel
@{
    ViewBag.Title = @ViewBag.Terms[0];
}
    <h1><img src="~/Images/Icons/pages.jpg" title="@ViewBag.Terms[0]" height="60" width="60" /> @ViewBag.Terms[0]</h1>
    <form class="mt-3" method="post">

        <div class="form-group row">
            <label asp-for="@Model.Page.Name" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Page.Name" class="form-control" />
                <span asp-validation-for="@Model.Page.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row" hidden>
            <label asp-for="@Model.Page.LanguageId" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Page.LanguageId" class="form-control" />
                <span asp-validation-for="@Model.Page.LanguageId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Page.Description" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
            <div class="col-sm-10">
                <textarea asp-for="@Model.Page.Description" class="form-control ckeditor" id="description" name="Page.description"></textarea>
                <span asp-validation-for="@Model.Page.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Page.TitleName" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Page.TitleName" class="form-control" />
                <span asp-validation-for="@Model.Page.TitleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Page.TitleDescription" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
            <div class="col-sm-10">
                <textarea asp-for="@Model.Page.TitleDescription" class="form-control ckeditor" id="pagedescription" name="Page.pageDescription"></textarea>
                <span asp-validation-for="@Model.Page.TitleDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Page.MouseOver" class="col-sm-2 col-form-label">@ViewBag.Terms[5]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Page.MouseOver" class="form-control" />
                <span asp-validation-for="@Model.Page.MouseOver" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Page.MenuName" class="col-sm-2 col-form-label">@ViewBag.Terms[10]</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Page.MenuName" class="form-control" />
                <span asp-validation-for="@Model.Page.MenuName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Page.PageStatusId" class="col-sm-2 col-form-label">@ViewBag.Terms[6]</label>
            <div class="col-sm-10 ">

                @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
                @Html.DropDownListFor(x => x.Page.PageStatusId, Model.StatusList)
                <span asp-validation-for="@Model.Page.PageStatusId" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Page.PageTypeId" class="col-sm-2 col-form-label">@ViewBag.Terms[7]</label>
            <div class="col-sm-10 ">

                @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
                @Html.DropDownListFor(x => x.Page.PageTypeId, Model.TypeList)
                <span asp-validation-for="@Model.Page.PageTypeId" class="text-danger"></span>

            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[8]</button>
                <a asp-action="Index" asp-controller="Page" class="btn btn-primary btn-light">@ViewBag.Terms[9]</a>
            </div>
        </div>
    </form>

<script>
    $(document).ready(function () {
        if (CKEDITOR.instances['description']) {
            CKEDITOR.instances['description'].destroy();
        }
        CKEDITOR.replace('description', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['description'].getData()
            console.log(ckValue);
        });
    });

    $(document).ready(function () {
        if (CKEDITOR.instances['pagedescription']) {
            CKEDITOR.instances['pagedescription'].destroy();
        }
        CKEDITOR.replace('pagedescription', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['pagedescription'].getData()
            console.log(ckValue);
        });
    });

</script>