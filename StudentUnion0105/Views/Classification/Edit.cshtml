@model SuObjectAndStatusViewModel
@{
    ViewBag.Title = "Edit classification";
}
<h1><img src="~/Images/Icons/Classifications.png"  height="60" width="60"   /> Edit classification</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.SuObject.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.Id" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.ObjectLanguageId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.ObjectLanguageId" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.Name" class="form-control" />
            <span asp-validation-for="@Model.SuObject.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.MenuName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.MenuName" class="form-control" />
            <span asp-validation-for="@Model.SuObject.MenuName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.MouseOver" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.MouseOver" class="form-control" />
            <span asp-validation-for="@Model.SuObject.MouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 ">

            @*@Html.DropDownListFor(x => x.Classification.Status, new SelectList(Model.a, "Value", "Text"))*@
            @Html.DropDownListFor(x => x.SuObject.Status, Model.SomeKindINumSelectListItem)
            <span asp-validation-for="@Model.SuObject.Status" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.SuObject.HasDropDown" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SuObject.HasDropDown" class="form-check" />
            <span asp-validation-for="@Model.SuObject.HasDropDown" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">Update</button>
            <a asp-action="Index" asp-controller="Classification" class="btn btn-primary btn-light">Cancel</a>
        </div>
    </div>
</form>
    