@model SuObjectLanguageEditGetModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewBag.Title = @ViewBag.Terms[0];
}
<h1><img src="~/Images/Icons/languages.jpg" title="@ViewBag.Terms[0]" height="60" width="60" /> @ViewBag.Terms[0]</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.Language" class="col-sm-2 col-form-label">@ViewBag.Terms[7]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Language" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.LId" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.LId" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row" hidden>
        <label asp-for="@Model.OId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.OId" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-2 col-form-label">@ViewBag.Terms[8]</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.Description" class="form-control ckeditor" id="description" name="SuObject.Description"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MouseOver" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MouseOver" disabled class="form-control" />
            <span asp-validation-for="@Model.MouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.MenuName" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.MenuName" disabled class="form-control" />
            <span asp-validation-for="@Model.MenuName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Creator" class="col-sm-2 col-form-label">ViewBag.Terms[9]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Creator" disabled class="form-control" />
            <span asp-validation-for="@Model.Creator" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.CreatedDate" class="col-sm-2 col-form-label">ViewBag.Terms[10]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.CreatedDate" disabled class="form-control" />
            <span asp-validation-for="@Model.CreatedDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Modifier" class="col-sm-2 col-form-label">ViewBag.Terms[11]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Modifier" disabled class="form-control" />
            <span asp-validation-for="@Model.Modifier" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ModifiedDate" class="col-sm-2 col-form-label">ViewBag.Terms[12]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.ModifiedDate" disabled class="form-control" />
            <span asp-validation-for="@Model.ModifiedDate" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[5]</button>
            <a asp-action="LanguageIndex" asp-controller="ProcessTemplateGroup" class="btn btn-primary btn-light">@ViewBag.Terms[6]</a>
        </div>
    </div>
</form>



<script>
            $(document).ready(function () {
                if (CKEDITOR.instances['description']) {
                    CKEDITOR.instances['description'].destroy();
                }
                CKEDITOR.replace('description', {
                    fullPage: false, uiColor: '#efe8ce'
                });
                $('#getVal').on('click', function (e) {
                    let ckValue = CKEDITOR.instances['description'].getData()
                    console.log(ckValue);
                });
            });
</script>