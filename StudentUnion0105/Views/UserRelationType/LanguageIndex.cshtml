@{
    ViewBag.Title = @ViewBag.Terms[0];
}
@model List<SuUserRelationTypeLanguageIndexGetModel>
@{
    Layout = "_LayoutAdmin";
}

<h1 class="font-weight-bold"><img src="~/Images/Icons/languages.jpg" title="Languages" height="60" width="60" /> @ViewBag.Terms[0]</h1>
<table class="table table-bordered table-sm table-hover">

    <thead class="thead-dark">
        <tr><th>@ViewBag.Terms[1]</th><th>@ViewBag.Terms[2]</th><th>@ViewBag.Terms[7]</th><th>@ViewBag.Terms[8]</th><th>@ViewBag.Terms[9]</th></tr>
    </thead>
    @foreach (var x in Model)

    {
        <tr>
            <td style="width: 44px">@x.LId</td>
            <td>@x.FromIsOfToName</td>
            <td>@x.ToIsOfFromName</td>
            <td>@x.FromIsOfToMenuName</td>
            <td>@x.ToIsOfFromMenuName</td>
            <td hidden>@x.OId</td>
            @*PETER TODO Hide the object ID somehow would be nice*@

            <td style="width: 22px"><a asp-controller="UserRelationType" asp-action="LanguageEdit" asp-route-Id="@x.LId.ToString()"><img src="~/Images/Icons/open.png" title="@ViewBag.Terms[10]" height="20" width="20" /></a></td>
            <td style="width: 22px"><a asp-controller="UserRelationType" asp-action="LanguageDelete" asp-route-Id="@x.LId.ToString()"><img src="~/Images/Icons/delete.png" title="@ViewBag.Terms[13]" height="20" width="20" /></a></td>
        </tr>
    }
</table>
<a asp-controller="UserRelationType" asp-action="LanguageCreate" asp-route-id=@ViewBag.Id><img src="~/Images/Icons/languages.jpg" title="@ViewBag.Terms[11]" height="20" width="20" /> @ViewBag.Terms[11]</a>
<a asp-controller="UserRelationType" asp-action="Index"><img src="~/Images/Icons/ProjectTYpe.png" title="@ViewBag.Terms[12]" height="20" width="20" /> @ViewBag.Terms[12]</a>