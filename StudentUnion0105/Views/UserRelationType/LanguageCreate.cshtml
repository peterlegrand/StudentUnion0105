@{
}
@{
    ViewBag.Title = @ViewBag.Terms[0];
}@{
    Layout = "_LayoutAdmin";
}

<h1><img src="~/Images/Icons/languages.jpg" title="@ViewBag.Terms[0]" height="60" width="60" /> @ViewBag.Terms[0]</h1>
<form class="mt-3" method="post">
    <div class="form-group row" hidden>
        <label asp-for="@Model.UserRelationType.OId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserRelationType.OId" class="form-control" hidden />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.FromIsOfToName" class="col-sm-2 col-form-label">@ViewBag.Terms[11]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserRelationType.FromIsOfToName" class="form-control" />
            <span asp-validation-for="@Model.UserRelationType.FromIsOfToName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.ToIsOfFromName" class="col-sm-2 col-form-label">@ViewBag.Terms[12]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserRelationType.ToIsOfFromName" class="form-control" />
            <span asp-validation-for="@Model.UserRelationType.ToIsOfFromName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.FromIsOfToDescription" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.UserRelationType.FromIsOfToDescription" class="form-control ckeditor" id="description" name="UserRelationType.FromIsOfToDescription"></textarea>
            <span asp-validation-for="@Model.UserRelationType.FromIsOfToDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.ToIsOfFromDescription" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.UserRelationType.FromIsOfToDescription" class="form-control ckeditor" id="description" name="UserRelationType.ToIsOfFromDescription"></textarea>
            <span asp-validation-for="@Model.UserRelationType.ToIsOfFromDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.FromIsOfToMouseOver" class="col-sm-2 col-form-label">@ViewBag.Terms[5]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserRelationType.FromIsOfToMouseOver" class="form-control" />
            <span asp-validation-for="@Model.UserRelationType.FromIsOfToMouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.ToIsOfFromMouseOver" class="col-sm-2 col-form-label">@ViewBag.Terms[6]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserRelationType.ToIsOfFromMouseOver" class="form-control" />
            <span asp-validation-for="@Model.UserRelationType.ToIsOfFromMouseOver" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.FromIsOfToMenuName" class="col-sm-2 col-form-label">@ViewBag.Terms[7]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserRelationType.FromIsOfToMenuName" class="form-control" />
            <span asp-validation-for="@Model.UserRelationType.FromIsOfToMenuName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.ToIsOfFromMenuName" class="col-sm-2 col-form-label">@ViewBag.Terms[8]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserRelationType.ToIsOfFromMenuName" class="form-control" />
            <span asp-validation-for="@Model.UserRelationType.ToIsOfFromMenuName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.UserRelationType.LanguageId" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
        <div class="col-sm-10 ">

            @Html.DropDownListFor(x => x.UserRelationType.LanguageId, Model.LanguageList)
            <span asp-validation-for="@Model.UserRelationType.LanguageId" class="text-danger"></span>

        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[9]</button>
            <a asp-action="LanguageIndex" asp-controller="Classification" asp-route-id="@Model.UserRelationType.OId.ToString()" class="btn btn-primary btn-light">@ViewBag.Terms[10]</a>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        if (CKEDITOR.instances['FromIsOfToDescription']) {
            CKEDITOR.instances['FromIsOfToDescription'].destroy();
        }
        CKEDITOR.replace('FromIsOfToDescription', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['FromIsOfToDescription'].getData()
            console.log(ckValue);
        });
    });
    $(document).ready(function () {
        if (CKEDITOR.instances['ToIsOfFromDescription']) {
            CKEDITOR.instances['ToIsOfFromDescription'].destroy();
        }
        CKEDITOR.replace('ToIsOfFromDescription', {
            fullPage: false, uiColor: '#efe8ce'
        });
        $('#getVal').on('click', function (e) {
            let ckValue = CKEDITOR.instances['ToIsOfFromDescription'].getData()
            console.log(ckValue);
        });
    });
</script>