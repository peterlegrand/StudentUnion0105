@model SuLanguageModel
@{
    ViewBag.Title = @ViewBag.Terms[0];
}
@{
    Layout = "_LayoutAdmin";
}
<h1><img src="~/Images/Icons/languages.jpg" height="60" width="60" /> Edit Language</h1>
<form class="mt-3" method="post">

    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-sm-2 col-form-label">@ViewBag.Terms[1]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.LanguageName" class="col-sm-2 col-form-label">@ViewBag.Terms[2]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.LanguageName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ForeignName" class="col-sm-2 col-form-label">@ViewBag.Terms[3]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.ForeignName" class="form-control" />
            <span asp-validation-for="@Model.ForeignName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ISO6391" class="col-sm-2 col-form-label">@ViewBag.Terms[4]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.ISO6391" class="form-control" />
            <span asp-validation-for="@Model.ISO6391" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.ISO6392" class="col-sm-2 col-form-label">@ViewBag.Terms[5]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.ISO6392" class="form-control" />
            <span asp-validation-for="@Model.ISO6392" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Active" class="col-sm-2 col-form-label">@ViewBag.Terms[6]</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Active" class="form-check" />
            <span asp-validation-for="@Model.Active" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-dark">@ViewBag.Terms[7]</button>
            <a asp-action="Index" asp-controller="Language" class="btn btn-primary btn-light">@ViewBag.Terms[8]</a>
        </div>
    </div>
</form>
