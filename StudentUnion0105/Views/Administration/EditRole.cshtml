@model EditRoleViewModel

@{
    ViewBag.Title = "Edit role";
}
<h1>Edit role</h1>
<form class="mt-3" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="RoleList" asp-controller="Administration" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <table class="table table-bordered">

        <thead class="thead-dark">
            <tr><th>User name</th><th>Name</th><th>Open</th></tr>
        </thead>
        @if (Model.Users.Any())
        {
            @foreach (var x in Model.Users)

            {
                <tr>
                    <td>@x</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No users in this role</td>
            </tr>
        }
        <tr>
            <td>
                <a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" asp-controller="Administeation" class="btn btn-primary">Add users</a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Remove users</a>
            </td>
        </tr>
    </table>
    <table class="table table-bordered">

        <thead class="thead-dark">
            <tr><th>Claim type</th><th>Claim value</th><th>Open</th></tr>
        </thead>
        @if (Model.Claims.Any())
        {
            @foreach (var x in Model.Claims)

            {
    <tr>
        <td>@x.Type</td>
        <td>@x.Value</td>
    </tr>
            }
        }
        else
        {
            <tr>
                <td>No rights in this role</td>
            </tr>
        }
        <tr>
            <td>
                <a asp-action="AddRightsToRole" asp-route-roleId="@Model.Id" asp-controller="Administration" class="btn btn-primary">Add Rights</a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Remove users</a>
            </td>
        </tr>
    </table>
</form>